<%- include("partials/header"); -%>

<body>
    <h1>Home</h1>
    <p><%= homeStartingContent %></p>
    <% postArray.forEach((element)=>{ %>
        <h1> <%= element.title %> </h1>
        <% if(element.content.length > 100){ %>
            <% let postLink = "/posts/" + element._id; %> 
            <p>
                <%= element.content.substring(0,100) + "... " %>
                <a href= <%= encodeURI(postLink) %> >Read More</a>
            </p>
        <% } else{ %>
            <p> <%= element.content %> </p>
        <% } %>
    <% }); %>

<%- include("partials/footer"); -%>
